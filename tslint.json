{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            "tests/**"
        ]
    },
    "rules": {
        "arrow-return-shorthand": false,
        "indent": [ true, "spaces", 4 ],
        "interface-name": false,
        "linebreak-style": [ false, "LF"],
        "max-line-length": [ true, { "limit": 300, "ignore-pattern": "^import |^export {(.*?)}" } ],
        "no-bitwise": false,
        "no-consecutive-blank-lines": false,
        "no-console": [false, "debug", "info", "log", "time", "timeEnd", "trace"],
        "no-trailing-whitespace": false,
        "no-empty": [ true, "allow-empty-catch", "allow-empty-functions" ],
        "ordered-imports": false,
        "only-arrow-functions": [ false, "allow-declarations", "allow-named-functions"],
        "object-literal-key-quotes": [true, "as-needed"],
        "object-literal-shorthand": false,
        "object-literal-sort-keys": false,
        "one-line": [true, "check-open-brace", "check-else", "check-catch", "check-finally", "check-else", "check-whitespace"],
        "quotemark": [true, "single", "avoid-escape", "avoid-template", "jsx-double"],
        "semicolon": [true, "always", "ignore-interfaces"],
        "trailing-comma": [ true, { "multiline": "ignore", "singleline": "never" }],
        "triple-equals": [true, "allow-null-check"],
        "typedef": [true, "parameter", "arrow-parameter", "property-declaration", "member-variable-declaration"],
        "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-typecast", "check-type"]
    }
}
